#:include connected.kv
#:include notConnected.kv

<Login>:
    BoxLayout
        id: login_layout
        orientation: 'vertical'
        padding: [10,50,10,50]
        spacing: 50

        Label:
            text: 'Login'
            font_size: 32

        BoxLayout:
            orientation: 'vertical'

            Label:
                text: 'username'
                font_size: 18
                halign: 'center'
                text_size: root.width-20, 20

            TextInput:
                id: login
                multiline:False
                font_size: 28

        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Password'
                halign: 'center'
                font_size: 18
                text_size: root.width-20, 20

            TextInput:
                id: password
                multiline:False
                password:True
                font_size: 28

        Button:
            text: 'Go'
            font_size: 24
            background_color: (0.0, 0.5, 1.0, 1.0)
            on_press: root.do_login(login.text, password.text)
